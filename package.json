{
  "name": "tuna",
  "version": "0.0.1",
  "description": "A cross-platform iTunes alternative",
  "main": "src/main.js",
  "author": "Jan Wirth <contact@jan-wirth.de>",
  "scripts": {
    "start": "nodemon --exec \"npm run elm && npm run monkey-patch && npm run electron\" -w src -e elm,js",
    "elm": "elm make --debug src/Main.elm --output elm-stuff/elm.js",
    "monkey-patch": "sed -i \"s/startsWith, 'http/startsWith, 'app/g\" elm-stuff/elm.js",
    "electron": "electron .",
    "build": "elm make src/Main.elm --optimize && electron-builder"
  },
  "keywords": [
    "Electron"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.0.3",
    "electron-builder": "^22.4.0"
  },
  "dependencies": {
    "concurrently": "^5.1.0",
    "electron-reload": "^1.5.0",
    "electron-serve": "^0.4.1",
    "elm": "^0.19.1-3",
    "html-entities": "^1.2.1",
    "isomorphic-fetch": "^2.2.1",
    "nodemon": "^2.0.2"
  }
}
