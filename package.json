{
  "name": "tuna",
  "version": "0.0.1",
  "description": "A cross-platform iTunes alternative",
  "main": "main.js",
  "author": "Jan Wirth <contact@jan-wirth.de>",
  "scripts": {
    "start": "concurrently --raw npm:elm npm:electron",
    "elm": "nodemon --exec \"elm make --debug src/Main.elm\" -w src -e elm",
    "electron": "nodemon --exec \"electron .\" -w . -e js",
    "build": "elm make src/Main.elm --optimize && electron-builder"
  },
  "keywords": [
    "Electron"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.0.3",
    "electron-builder": "^22.4.0"
  },
  "dependencies": {
    "concurrently": "^5.1.0",
    "electron-reload": "^1.5.0",
    "electron-serve": "^0.4.1",
    "elm": "^0.19.1-3",
    "nodemon": "^2.0.2"
  }
}
